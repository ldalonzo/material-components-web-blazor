@inherits MaterialComponent
<label class="@ClassString" @ref="mdcTextFieldElement">
    @if (Variant == MDCTextFieldStyle.Filled)
    {
        <span class="mdc-text-field__ripple"></span>

        <input type="text"
               id="@Id"
               aria-labelledby="@LabelId"
               class="mdc-text-field__input"
               value="@Value"
               @oninput="@OnValueChanged"
               disabled="@Disabled" />

        <span class="@LabelClassString" id="@LabelId">@Label</span>
        <span class="mdc-line-ripple"></span>
    }
    else if (Variant == MDCTextFieldStyle.Outlined)
    {
        <input type="text"
               id="@Id"
               aria-labelledby="@LabelId"
               class="mdc-text-field__input"
               value="@Value"
               @oninput="@OnValueChanged"
               disabled="@Disabled" />

        <span class="@NotchedOutlineClassString">
            <span class="mdc-notched-outline__leading"></span>
            <span class="mdc-notched-outline__notch">
                <span class="@LabelClassString" id="@LabelId">@Label</span>
            </span>
            <span class="mdc-notched-outline__trailing"></span>
        </span>
    }
</label>
