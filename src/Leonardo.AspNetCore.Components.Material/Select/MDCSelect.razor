@inherits MDCSelect
@typeparam T
<div class="@ClassString" @ref="mdcSelectElement">
    <div class="mdc-select__anchor demo-width-class">
        <i class="mdc-select__dropdown-icon"></i>
        <div class="mdc-select__selected-text">@SelectedText</div>
        <span class="@LabelClassString">@Label</span>
        <div class="mdc-line-ripple"></div>
    </div>
    <div class="mdc-select__menu mdc-menu mdc-menu-surface demo-width-class">
        <ul class="mdc-list">
            @if (IncludeEmptyItem)
            {
                <li class="@BuildItemClassString()" data-value="" aria-selected="true"></li>
            }
            @foreach (var item in DataSource)
            {
                <li class="@BuildItemClassString(item)" data-value="@GetItemDataValue(item)">
                    @GetItemDisplayText(item)
                </li>
            }
        </ul>
    </div>
</div>
