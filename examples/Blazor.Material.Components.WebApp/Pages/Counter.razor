@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<MDCButton Variant="@MDCButtonStyle.Raised"
           OnClick="@IncrementCount"
           LeadingIcon="add">Click me</MDCButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
