@page "/component/checkbox"
<ComponentCatalogPanel Title="Checkbox">
    <HeroComponent>
        <MDCCheckbox Label="@Label" 
                     @bind-Value="@Value"
                     @bind-Indeterminate="@Indeterminate" />
    </HeroComponent>
    <HeroComponentOptions>
        <ComponentOption>
            <MDCTextField Label="Label" Variant="MDCTextFieldStyle.Outlined" @bind-Value="@Label" />
        </ComponentOption>
        <ComponentOption>
            <MDCCheckbox Label="Current Value"
                         Disabled="true"
                         @bind-Value="@Value"
                         @bind-Indeterminate="@Indeterminate" />
        </ComponentOption>
        <ComponentOption>
            <MDCButton OnClick="@(_ => Indeterminate = true)">
                Set Indeterminate
            </MDCButton>
        </ComponentOption>
    </HeroComponentOptions>
    <Demos>
        <ComponentDemo Title="Unchecked">
            <MDCCheckbox Value="false" />
        </ComponentDemo>
        <ComponentDemo Title="Indeterminate">
            <MDCCheckbox Indeterminate="true" />
        </ComponentDemo>
        <ComponentDemo Title="Checked">
            <MDCCheckbox Value="true" />
        </ComponentDemo>
    </Demos>
</ComponentCatalogPanel>

@code {
    private bool Value { get; set; }
    private bool Indeterminate { get; set; }
    private string Label { get; set; } = "Checkbox";
}
