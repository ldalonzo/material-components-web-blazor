@page "/component/checkbox"
<ComponentCatalogPanel Title="Checkbox">
    <HeroComponent>
        <MDCCheckbox @bind-Value="@Value" Label="@Label" />
    </HeroComponent>
    <HeroComponentOptions>
        <ComponentOption>
            <MDCTextField Label="Label" Variant="MDCTextFieldStyle.Outlined" @bind-Value="@Label" />
        </ComponentOption>
        <ComponentOption>
            <MDCCheckbox @bind-Value="@Value" Label="Current Value" Disabled="true" />
        </ComponentOption>
    </HeroComponentOptions>
    <Demos>
        <ComponentDemo Title="Unchecked">
            <MDCCheckbox Value="false" />
        </ComponentDemo>
        <ComponentDemo Title="Checked">
            <MDCCheckbox Value="true" />
        </ComponentDemo>
    </Demos>
</ComponentCatalogPanel>

@code {
    private bool Value { get; set; }
    private string Label { get; set; } = "Checkbox";
}
