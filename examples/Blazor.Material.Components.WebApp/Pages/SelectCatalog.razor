@page "/component/select"
<ComponentCatalogPanel Title="Select">
    <HeroComponent>
        <MDCSelect Label="@Label" DataSource="@Fruits" @bind-Value="@SelectedItem" />
    </HeroComponent>
    <HeroComponentOptions>
        <ComponentOption>
            <MDCTextField Label="Selected" Variant="MDCTextFieldStyle.Outlined" Value="@SelectedItem" Disabled="true"/>
        </ComponentOption>
    </HeroComponentOptions>
</ComponentCatalogPanel>

@code {
    private string Label { get; set; } = "Fruit";

    private string SelectedItem { get; set; }

    private readonly List<string> Fruits = new List<string>
    {
        "Apple",
        "Orange",
        "Banana"
    };
}
