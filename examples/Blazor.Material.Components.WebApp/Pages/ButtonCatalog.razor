@page "/component/button"
<ComponentCatalogPanel Title="Button">
    <HeroComponent>
        <MDCButton Variant="@Variant">@ButtonText</MDCButton>
    </HeroComponent>
    <HeroComponentOptions>
        <li class="mdc-list-item catalog-tf-list-item">
            <div>
                <MDCSelect Label="Variant" DataSource="@VariantItems" @bind-Value="@Variant" />
            </div>
        </li>
        <li class="mdc-list-item catalog-tf-list-item">
            <div>
                <MDCTextField Label="Button Text" Variant="MDCTextFieldStyle.Outlined" @bind-Value="ButtonText" />
            </div>
        </li>
    </HeroComponentOptions>
    <Demos>
        <ComponentDemo Title="Raised Button">
            <MDCButton Variant="@MDCButtonStyle.Raised">Default</MDCButton>
            <MDCButton Variant="@MDCButtonStyle.Raised"
                       LeadingIcon="favorite">Icon</MDCButton>
        </ComponentDemo>
        <ComponentDemo Title="Unelevated Button">
            <MDCButton Variant="@MDCButtonStyle.Unelevated">Default</MDCButton>
            <MDCButton Variant="@MDCButtonStyle.Unelevated"
                       LeadingIcon="favorite">Icon</MDCButton>
        </ComponentDemo>
        <ComponentDemo Title="Outlined Button">
            <MDCButton Variant="@MDCButtonStyle.Outlined">Default</MDCButton>
            <MDCButton Variant="@MDCButtonStyle.Outlined"
                       LeadingIcon="favorite">Icon</MDCButton>
        </ComponentDemo>
    </Demos>
</ComponentCatalogPanel>

@code {
    private string ButtonText { get; set; } = "Learn More";
    private IEnumerable<MDCButtonStyle> VariantItems => Enum.GetValues(typeof(MDCButtonStyle)).OfType<MDCButtonStyle>();
    private MDCButtonStyle Variant { get; set; } = MDCButtonStyle.Text;
}
