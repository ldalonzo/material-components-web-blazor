@inherits LayoutComponentBase

<div class="drawer-frame-root">
    <NavMenu />
    <div class="drawer-frame-app-content">
        <MDCTopAppBar Class="drawer-top-app-bar"
                      Title="Material Blazor Components"
                      OnNav="@ToggleNavMenu">
            <ActionItems>
                <a class="material-icons mdc-top-app-bar__action-item mdc-icon-button"
                   aria-label="Bookmark this page"
                   href="https://github.com/ldalonzo/material-components-web-blazor"
                   target="_blank">code</a>
            </ActionItems>
        </MDCTopAppBar>
        <div class="drawer-main-content">
            <div class="mdc-top-app-bar--fixed-adjust">
            </div>
            <div>
                @Body
            </div>
        </div>
    </div>
</div>

@code {
    private bool collapseNavMenu;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
